[core]
	editor = nvim
	excludesfile = ~/.gitexclude
	pager = delta-or-less
[merge]
	conflictstyle = diff3
[diff]
	colorMoved = default
	tool = vimdiff
[init]
	defaultBranch = main
[user]
	signingKey = ~/.ssh/id_ed25519.pub
[gpg]
	format = ssh
[commit]
	gpgsign = true
[interactive]
	diffFilter = delta-or-less --color-only
[delta]
	light = false
	line-numbers = true
	navigate = true
	side-by-side = true
